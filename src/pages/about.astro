---
import SEO from '../components/SEO.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <SEO
    title="About Us - Placement"
    description="Learn about Placement and our mission to provide definitive guides to specialist recruitment sectors"
  />
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

  <!-- GSAP for animations -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>

  <style is:inline>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    html { scroll-behavior: smooth; }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: #000;
      color: #fff;
      line-height: 1.6;
      overflow-x: hidden;
    }

    /* Navigation */
    nav {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      padding: 24px 60px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(20px);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .logo {
      font-size: 20px;
      font-weight: 900;
      background: linear-gradient(135deg, #667eea, #f093fb);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      letter-spacing: -0.5px;
    }

    .nav-links {
      display: flex;
      gap: 40px;
      list-style: none;
    }

    .nav-links a {
      color: #fff;
      text-decoration: none;
      font-weight: 600;
      font-size: 14px;
      transition: opacity 0.3s;
    }

    .nav-links a:hover { opacity: 0.6; }

    /* Hero Section */
    .hero {
      min-height: 70vh;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 160px 40px 100px;
      position: relative;
      overflow: hidden;
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.15), rgba(240, 147, 251, 0.15), rgba(0, 0, 0, 0.95));
    }

    .hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: radial-gradient(circle at 50% 50%, rgba(102, 126, 234, 0.2), transparent 70%);
      pointer-events: none;
    }

    .hero-content {
      max-width: 900px;
      position: relative;
      z-index: 10;
      opacity: 0;
      transform: translateY(30px);
    }

    .hero h1 {
      font-size: clamp(48px, 8vw, 80px);
      font-weight: 900;
      margin-bottom: 24px;
      background: linear-gradient(135deg, #fff, #f093fb);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      line-height: 1.1;
      letter-spacing: -0.02em;
    }

    .hero p {
      font-size: 24px;
      color: rgba(255, 255, 255, 0.7);
      line-height: 1.6;
    }

    /* Content Section */
    .content-section {
      max-width: 1000px;
      margin: 0 auto;
      padding: 100px 40px;
      opacity: 0;
      transform: translateY(20px);
      position: relative;
      z-index: 10;
    }

    .content-block {
      margin-bottom: 80px;
    }

    .content-block h2 {
      font-size: clamp(32px, 5vw, 42px);
      font-weight: 900;
      margin-bottom: 24px;
      color: #fff;
    }

    .content-block p {
      font-size: 18px;
      color: rgba(255, 255, 255, 0.8);
      line-height: 1.8;
      margin-bottom: 20px;
    }

    .content-block ul {
      list-style: none;
      margin-top: 24px;
    }

    .content-block ul li {
      font-size: 18px;
      color: rgba(255, 255, 255, 0.8);
      line-height: 1.8;
      margin-bottom: 16px;
      padding-left: 32px;
      position: relative;
    }

    .content-block ul li::before {
      content: '→';
      position: absolute;
      left: 0;
      color: #667eea;
      font-weight: 600;
    }

    /* Values Grid */
    .values-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 30px;
      margin-top: 40px;
    }

    .value-card {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 16px;
      padding: 32px;
      transition: all 0.3s ease;
      opacity: 0;
      transform: translateY(20px);
    }

    .value-card:hover {
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(102, 126, 234, 0.3);
      transform: translateY(-4px);
    }

    .value-card h3 {
      font-size: 22px;
      font-weight: 700;
      margin-bottom: 12px;
      color: #fff;
    }

    .value-card p {
      font-size: 16px;
      color: rgba(255, 255, 255, 0.7);
      line-height: 1.6;
      margin-bottom: 0;
    }

    /* CTA Section */
    .cta-section {
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(240, 147, 251, 0.1));
      border-top: 1px solid rgba(102, 126, 234, 0.2);
      border-bottom: 1px solid rgba(102, 126, 234, 0.2);
      padding: 100px 40px;
      text-align: center;
      margin-top: 80px;
      position: relative;
      overflow: hidden;
      opacity: 0;
      transform: translateY(20px);
    }

    .cta-section::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, rgba(102, 126, 234, 0.1), transparent 70%);
      animation: pulse-slow 8s ease-in-out infinite;
    }

    @keyframes pulse-slow {
      0%, 100% { transform: scale(1); opacity: 0.5; }
      50% { transform: scale(1.1); opacity: 0.3; }
    }

    .cta-section > * {
      position: relative;
      z-index: 1;
    }

    .cta-section h2 {
      font-size: clamp(36px, 6vw, 48px);
      font-weight: 900;
      margin-bottom: 24px;
      color: #fff;
    }

    .cta-section p {
      font-size: 20px;
      color: rgba(255, 255, 255, 0.7);
      margin-bottom: 32px;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    .cta-button {
      display: inline-block;
      background: #fff;
      color: #667eea;
      padding: 20px 48px;
      border-radius: 100px;
      text-decoration: none;
      font-weight: 700;
      font-size: 16px;
      transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
      border: none;
      cursor: pointer;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    }

    .cta-button:hover {
      transform: scale(1.05) translateY(-3px);
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
    }

    /* Footer */
    footer {
      padding: 80px 60px 40px;
      background: linear-gradient(180deg, rgba(0, 0, 0, 0.95) 0%, #000 100%);
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      position: relative;
    }

    footer::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 200px;
      background: linear-gradient(180deg, rgba(102, 126, 234, 0.05), transparent);
      pointer-events: none;
    }

    .footer-content {
      max-width: 1400px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 60px;
      margin-bottom: 60px;
    }

    .footer-section h3 {
      font-size: 18px;
      font-weight: 700;
      margin-bottom: 20px;
    }

    .footer-links {
      list-style: none;
    }

    .footer-links a {
      color: rgba(255, 255, 255, 0.6);
      text-decoration: none;
      display: block;
      margin-bottom: 12px;
      transition: color 0.3s;
    }

    .footer-links a:hover {
      color: #fff;
    }

    .footer-bottom {
      text-align: center;
      padding-top: 40px;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      color: rgba(255, 255, 255, 0.5);
      font-size: 14px;
    }

    @media (max-width: 768px) {
      nav {
        padding: 20px 30px;
      }

      .nav-links {
        display: none;
      }

      .hero {
        padding: 140px 30px 80px;
        min-height: 60vh;
      }

      .content-section {
        padding: 80px 30px;
      }

      .content-block h2 {
        font-size: 28px;
      }

      .content-block p,
      .content-block ul li {
        font-size: 16px;
      }

      .values-grid {
        grid-template-columns: 1fr;
      }

      .cta-section {
        padding: 80px 30px;
      }

      footer {
        padding: 60px 30px 30px;
      }

      .footer-content {
        grid-template-columns: 1fr;
        gap: 40px;
      }
    }
  </style>
</head>

<body>
  <!-- Navigation -->
  <nav>
    <a href="/" class="logo">Placement</a>
    <ul class="nav-links">
      <li><a href="/articles">Articles</a></li>
      <li><a href="/private-equity-placement-agents">Placement Agents</a></li>
    </ul>
  </nav>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <h1>About Placement</h1>
      <p>We're building the definitive guide to placement agents and PE fundraising</p>
    </div>
  </section>

  <!-- Content Section -->
  <section class="content-section">
    <div class="content-block">
      <h2>Our Mission</h2>
      <p>Placement is dedicated to providing comprehensive, authoritative information about private equity placement agents and PE fundraising services. We believe that finding the right placement partner is critical to successful capital raising, yet quality information in this niche market is often scattered and difficult to find.</p>
      <p>We're changing that by creating in-depth, curated directories and editorial content focused specifically on the PE placement and fundraising ecosystem.</p>
    </div>

    <div class="content-block">
      <h2>What We Cover</h2>
      <p>Placement operates as part of the Quest network of specialized platforms, each focused on a specific area of recruitment:</p>
      <ul>
        <li><strong>Placement.quest</strong> - The definitive guide to placement agents and PE fundraising recruitment</li>
        <li><strong>Relocation.quest</strong> - Comprehensive coverage of international relocation services and agencies</li>
        <li><strong>GTM.quest</strong> - Your resource for go-to-market and sales recruitment agencies</li>
      </ul>
    </div>

    <div class="content-block">
      <h2>Our Values</h2>
      <div class="values-grid">
        <div class="value-card">
          <h3>Quality First</h3>
          <p>We prioritize depth and accuracy over speed, ensuring every agency profile and article meets our high editorial standards.</p>
        </div>
        <div class="value-card">
          <h3>Editorial Independence</h3>
          <p>Our coverage is independent and unbiased. We don't accept payment for inclusion or favorable coverage.</p>
        </div>
        <div class="value-card">
          <h3>Sector Expertise</h3>
          <p>We invest deeply in understanding the PE fundraising sector, from market dynamics to key players and trends.</p>
        </div>
        <div class="value-card">
          <h3>User-Focused</h3>
          <p>Everything we build is designed to help you find the right placement partner quickly and confidently.</p>
        </div>
      </div>
    </div>

    <div class="content-block">
      <h2>How We Work</h2>
      <p>Our editorial process combines advanced technology with human expertise. We use AI-assisted research to gather and analyze information about placement agents, market trends, and fundraising dynamics, but every piece of content is reviewed and curated by our editorial team.</p>
      <p>We continuously update our directory entries and publish new articles to ensure you have access to the most current information about the PE placement and fundraising landscape.</p>
    </div>

    <div class="content-block">
      <h2>Based in London</h2>
      <p>Placement is based in London, United Kingdom. We serve a global audience of fund managers, limited partners, and businesses looking for specialist placement and fundraising services.</p>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <h2>Get in Touch</h2>
    <p>Have questions about our coverage or want to suggest improvements to our directory?</p>
    <a href="/contact" class="cta-button">Contact Us</a>
  </section>

  <!-- Footer -->
  <footer>
    <div class="footer-content">
      <div class="footer-section">
        <h3>Placement</h3>
        <p style="color: rgba(255, 255, 255, 0.6); margin-top: 12px;">
          Your definitive private equity placement agents news source.
        </p>
        <p style="margin-top: 16px;">
          <a href="/" style="color: #667eea; text-decoration: none; font-weight: 600;">Top Private Equity Placement Agents</a>
        </p>
      </div>

      <div class="footer-section">
        <h3>Resources</h3>
        <ul class="footer-links">
          <li><a href="/articles">Articles & Insights</a></li>
          <li><a href="/private-equity-placement-agents">Agency Directory</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h3>Company</h3>
        <ul class="footer-links">
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h3>Legal</h3>
        <ul class="footer-links">
          <li><a href="/privacy">Privacy Policy</a></li>
          <li><a href="/terms">Terms & Conditions</a></li>
        </ul>
      </div>
    </div>

    <div class="footer-bottom">
      <p>© 2025 Placement. All rights reserved.</p>
    </div>
  </footer>

  <script>
    // Wait for DOM and GSAP to load
    window.addEventListener('DOMContentLoaded', function() {
      if (typeof gsap !== 'undefined') {
        gsap.registerPlugin(ScrollTrigger);

        // Hero animation
        gsap.to('.hero-content', {
          opacity: 1,
          y: 0,
          duration: 1,
          delay: 0.3,
          ease: 'power3.out'
        });

        // Content section animation
        gsap.to('.content-section', {
          opacity: 1,
          y: 0,
          duration: 0.8,
          scrollTrigger: {
            trigger: '.content-section',
            start: 'top 80%'
          }
        });

        // Value cards staggered animation
        gsap.utils.toArray('.value-card').forEach((card, i) => {
          gsap.to(card, {
            opacity: 1,
            y: 0,
            duration: 0.6,
            delay: i * 0.1,
            scrollTrigger: {
              trigger: card,
              start: 'top 85%'
            }
          });
        });

        // CTA section animation
        gsap.to('.cta-section', {
          opacity: 1,
          y: 0,
          duration: 0.8,
          scrollTrigger: {
            trigger: '.cta-section',
            start: 'top 80%'
          }
        });
      }
    });
  </script>
</body>
</html>
