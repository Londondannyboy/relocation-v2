---
import SEO from '../components/SEO.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <SEO
    title="Contact Us - Placement"
    description="Get in touch with Placement - we'd love to hear from you"
  />
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

  <!-- GSAP for animations -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>

  <style is:inline>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    html { scroll-behavior: smooth; }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: #000;
      color: #fff;
      line-height: 1.6;
      overflow-x: hidden;
    }

    /* Navigation */
    nav {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      padding: 24px 60px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(20px);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .logo {
      font-size: 20px;
      font-weight: 900;
      background: linear-gradient(135deg, #667eea, #f093fb);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      letter-spacing: -0.5px;
    }

    .nav-links {
      display: flex;
      gap: 40px;
      list-style: none;
    }

    .nav-links a {
      color: #fff;
      text-decoration: none;
      font-weight: 600;
      font-size: 14px;
      transition: opacity 0.3s;
    }

    .nav-links a:hover { opacity: 0.6; }

    /* Hero Section */
    .hero {
      min-height: 65vh;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 160px 40px 100px;
      position: relative;
      overflow: hidden;
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.15), rgba(240, 147, 251, 0.15), rgba(0, 0, 0, 0.95));
    }

    .hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: radial-gradient(circle at 50% 50%, rgba(102, 126, 234, 0.2), transparent 70%);
      pointer-events: none;
    }

    .hero-content {
      max-width: 900px;
      position: relative;
      z-index: 10;
      opacity: 0;
      transform: translateY(30px);
    }

    .hero h1 {
      font-size: clamp(48px, 8vw, 80px);
      font-weight: 900;
      margin-bottom: 24px;
      background: linear-gradient(135deg, #fff, #f093fb);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      line-height: 1.1;
      letter-spacing: -0.02em;
    }

    .hero p {
      font-size: 24px;
      color: rgba(255, 255, 255, 0.7);
      line-height: 1.6;
    }

    /* Contact Section */
    .contact-section {
      max-width: 1100px;
      margin: 0 auto;
      padding: 100px 40px;
      opacity: 0;
      transform: translateY(20px);
      position: relative;
      z-index: 10;
    }

    .contact-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 40px;
      margin-bottom: 80px;
    }

    .contact-card {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 16px;
      padding: 40px;
      transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
      text-align: center;
      opacity: 0;
      transform: translateY(20px);
    }

    .contact-card:hover {
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(102, 126, 234, 0.3);
      transform: translateY(-8px);
    }

    .contact-icon {
      font-size: 48px;
      margin-bottom: 24px;
      display: block;
    }

    .contact-card h3 {
      font-size: 24px;
      font-weight: 700;
      margin-bottom: 16px;
      color: #fff;
    }

    .contact-card p {
      font-size: 16px;
      color: rgba(255, 255, 255, 0.7);
      line-height: 1.6;
      margin-bottom: 20px;
    }

    .contact-card a {
      color: #667eea;
      text-decoration: none;
      font-weight: 600;
      font-size: 18px;
      border-bottom: 2px solid rgba(102, 126, 234, 0.3);
      transition: all 0.3s ease;
      display: inline-block;
      padding-bottom: 4px;
    }

    .contact-card a:hover {
      color: #f093fb;
      border-bottom-color: rgba(240, 147, 251, 0.5);
    }

    /* Info Section */
    .info-section {
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(240, 147, 251, 0.08));
      border: 1px solid rgba(102, 126, 234, 0.2);
      border-radius: 20px;
      padding: 60px;
      margin-bottom: 60px;
      position: relative;
      overflow: hidden;
      opacity: 0;
      transform: translateY(20px);
    }

    .info-section::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, rgba(102, 126, 234, 0.1), transparent 70%);
      animation: pulse-slow 10s ease-in-out infinite;
    }

    @keyframes pulse-slow {
      0%, 100% { transform: scale(1) rotate(0deg); opacity: 0.5; }
      50% { transform: scale(1.1) rotate(45deg); opacity: 0.3; }
    }

    .info-section > * {
      position: relative;
      z-index: 1;
    }

    .info-section h2 {
      font-size: clamp(28px, 5vw, 36px);
      font-weight: 900;
      margin-bottom: 24px;
      color: #fff;
    }

    .info-section p {
      font-size: 18px;
      color: rgba(255, 255, 255, 0.8);
      line-height: 1.8;
      margin-bottom: 16px;
    }

    .info-section ul {
      list-style: none;
      margin-top: 32px;
    }

    .info-section ul li {
      font-size: 18px;
      color: rgba(255, 255, 255, 0.8);
      line-height: 1.8;
      margin-bottom: 16px;
      padding-left: 32px;
      position: relative;
    }

    .info-section ul li::before {
      content: '‚úì';
      position: absolute;
      left: 0;
      color: #667eea;
      font-weight: 700;
      font-size: 20px;
    }

    /* Company Info */
    .company-info {
      text-align: center;
      padding: 48px;
      background: rgba(255, 255, 255, 0.03);
      border-radius: 16px;
      border: 1px solid rgba(255, 255, 255, 0.1);
      opacity: 0;
      transform: translateY(20px);
    }

    .company-info h3 {
      font-size: 24px;
      font-weight: 700;
      margin-bottom: 16px;
      color: #fff;
    }

    .company-info p {
      font-size: 16px;
      color: rgba(255, 255, 255, 0.7);
      line-height: 1.8;
    }

    /* Footer */
    footer {
      padding: 80px 60px 40px;
      background: linear-gradient(180deg, rgba(0, 0, 0, 0.95) 0%, #000 100%);
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      position: relative;
      margin-top: 100px;
    }

    footer::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 200px;
      background: linear-gradient(180deg, rgba(102, 126, 234, 0.05), transparent);
      pointer-events: none;
    }

    .footer-content {
      max-width: 1400px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 60px;
      margin-bottom: 60px;
    }

    .footer-section h3 {
      font-size: 18px;
      font-weight: 700;
      margin-bottom: 20px;
    }

    .footer-links {
      list-style: none;
    }

    .footer-links a {
      color: rgba(255, 255, 255, 0.6);
      text-decoration: none;
      display: block;
      margin-bottom: 12px;
      transition: color 0.3s;
    }

    .footer-links a:hover {
      color: #fff;
    }

    .footer-bottom {
      text-align: center;
      padding-top: 40px;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      color: rgba(255, 255, 255, 0.5);
      font-size: 14px;
    }

    @media (max-width: 768px) {
      nav {
        padding: 20px 30px;
      }

      .nav-links {
        display: none;
      }

      .hero {
        padding: 140px 30px 80px;
        min-height: 55vh;
      }

      .contact-section {
        padding: 80px 30px;
      }

      .contact-grid {
        grid-template-columns: 1fr;
        gap: 30px;
      }

      .info-section {
        padding: 40px 30px;
      }

      .info-section h2 {
        font-size: 26px;
      }

      .info-section p,
      .info-section ul li {
        font-size: 16px;
      }

      .company-info {
        padding: 36px 24px;
      }

      footer {
        padding: 60px 30px 30px;
      }

      .footer-content {
        grid-template-columns: 1fr;
        gap: 40px;
      }
    }
  </style>
</head>

<body>
  <!-- Navigation -->
  <nav>
    <a href="/" class="logo">Placement</a>
    <ul class="nav-links">
      <li><a href="/articles">Articles</a></li>
      <li><a href="/private-equity-placement-agents">Placement Agents</a></li>
    </ul>
  </nav>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <h1>Get in Touch</h1>
      <p>We'd love to hear from you</p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="contact-section">
    <div class="contact-grid">
      <div class="contact-card">
        <span class="contact-icon">‚úâÔ∏è</span>
        <h3>Email Us</h3>
        <p>For general enquiries, editorial questions, or partnership opportunities</p>
        <a href="mailto:hello@placement.quest">hello@placement.quest</a>
      </div>

      <div class="contact-card">
        <span class="contact-icon">üìç</span>
        <h3>Location</h3>
        <p>We're based in London, United Kingdom</p>
        <p style="font-weight: 600; color: rgba(255, 255, 255, 0.9);">London, UK</p>
      </div>
    </div>

    <div class="info-section">
      <h2>What can we help you with?</h2>
      <p>We welcome enquiries about:</p>
      <ul>
        <li>Placement agent profiles and directory listings</li>
        <li>Editorial content and PE fundraising coverage</li>
        <li>Partnership opportunities</li>
        <li>Press and media enquiries</li>
        <li>Technical issues or feedback</li>
        <li>Data accuracy and corrections</li>
      </ul>
      <p style="margin-top: 32px;">We aim to respond to all enquiries within 48 hours. For urgent matters, please clearly indicate this in your email subject line.</p>
    </div>

    <div class="company-info">
      <h3>Placement</h3>
      <p>
        London, United Kingdom<br>
        <a href="mailto:hello@placement.quest" style="color: #667eea; text-decoration: none; margin-top: 12px; display: inline-block; font-weight: 600;">hello@placement.quest</a>
      </p>
    </div>
  </section>

  <!-- Footer -->
  <footer>
    <div class="footer-content">
      <div class="footer-section">
        <h3>Placement</h3>
        <p style="color: rgba(255, 255, 255, 0.6); margin-top: 12px;">
          Your definitive private equity placement agents news source.
        </p>
        <p style="margin-top: 16px;">
          <a href="/" style="color: #667eea; text-decoration: none; font-weight: 600;">Top Private Equity Placement Agents</a>
        </p>
      </div>

      <div class="footer-section">
        <h3>Resources</h3>
        <ul class="footer-links">
          <li><a href="/articles">Articles & Insights</a></li>
          <li><a href="/private-equity-placement-agents">Agency Directory</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h3>Company</h3>
        <ul class="footer-links">
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h3>Legal</h3>
        <ul class="footer-links">
          <li><a href="/privacy">Privacy Policy</a></li>
          <li><a href="/terms">Terms & Conditions</a></li>
        </ul>
      </div>
    </div>

    <div class="footer-bottom">
      <p>¬© 2025 Placement. All rights reserved.</p>
    </div>
  </footer>

  <script>
    // Wait for DOM and GSAP to load
    window.addEventListener('DOMContentLoaded', function() {
      if (typeof gsap !== 'undefined') {
        gsap.registerPlugin(ScrollTrigger);

        // Hero animation
        gsap.to('.hero-content', {
          opacity: 1,
          y: 0,
          duration: 1,
          delay: 0.3,
          ease: 'power3.out'
        });

        // Contact section animation
        gsap.to('.contact-section', {
          opacity: 1,
          y: 0,
          duration: 0.8,
          scrollTrigger: {
            trigger: '.contact-section',
            start: 'top 80%'
          }
        });

        // Contact cards staggered animation
        gsap.utils.toArray('.contact-card').forEach((card, i) => {
          gsap.to(card, {
            opacity: 1,
            y: 0,
            duration: 0.6,
            delay: i * 0.1,
            scrollTrigger: {
              trigger: card,
              start: 'top 85%'
            }
          });
        });

        // Info section animation
        gsap.to('.info-section', {
          opacity: 1,
          y: 0,
          duration: 0.8,
          scrollTrigger: {
            trigger: '.info-section',
            start: 'top 80%'
          }
        });

        // Company info animation
        gsap.to('.company-info', {
          opacity: 1,
          y: 0,
          duration: 0.8,
          scrollTrigger: {
            trigger: '.company-info',
            start: 'top 85%'
          }
        });
      }
    });
  </script>
</body>
</html>
