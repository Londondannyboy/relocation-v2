  <script define:vars={{ muxPlaybackId }}>
    // Wait for DOM and libraries to load - use load event since scripts are deferred
    window.addEventListener('load', function() {
      // Initialize Mux HLS video for hero
      const heroVideo = document.getElementById('hero-video');
      const heroVideoSrc = `https://stream.mux.com/${muxPlaybackId}.m3u8`;

      if (heroVideo && typeof Hls !== 'undefined' && Hls.isSupported()) {
        const hls = new Hls();
        hls.loadSource(heroVideoSrc);
        hls.attachMedia(heroVideo);
        hls.on(Hls.Events.MANIFEST_PARSED, function() {
          heroVideo.play().catch(e => console.log('Hero video autoplay prevented:', e));
        });
      } else if (heroVideo && heroVideo.canPlayType('application/vnd.apple.mpegurl')) {
        heroVideo.src = heroVideoSrc;
        heroVideo.addEventListener('loadedmetadata', function() {
          heroVideo.play().catch(e => console.log('Hero video autoplay prevented:', e));
        });
      }

      // Initialize Mux HLS video for companies section - only when scrolled near
      const companiesSection = document.querySelector('.companies-section');
      if (companiesSection) {
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              const companiesVideo = document.getElementById('companies-video');
              const videoSrc = `https://stream.mux.com/${muxPlaybackId}.m3u8`;

              if (companiesVideo && typeof Hls !== 'undefined' && Hls.isSupported()) {
                const hls2 = new Hls();
                hls2.loadSource(videoSrc);
                hls2.attachMedia(companiesVideo);
                hls2.on(Hls.Events.MANIFEST_PARSED, function() {
                  companiesVideo.play().catch(e => console.log('Companies video autoplay prevented:', e));
                });
              } else if (companiesVideo && companiesVideo.canPlayType('application/vnd.apple.mpegurl')) {
                companiesVideo.src = videoSrc;
                companiesVideo.addEventListener('loadedmetadata', function() {
                  companiesVideo.play().catch(e => console.log('Companies video autoplay prevented:', e));
                });
              }
              observer.disconnect();
            }
          });
        }, { rootMargin: '200px' });
        observer.observe(companiesSection);
      }

      // GSAP Animations - Minimal for best performance
      // Hero animations removed to eliminate render delay on LCP element
      if (typeof gsap !== 'undefined' && typeof ScrollTrigger !== 'undefined') {
        gsap.registerPlugin(ScrollTrigger);

        // Simplified scroll animations - only for below-fold content
        ScrollTrigger.batch('.stat-item, .company-card', {
          onEnter: (elements) => {
            gsap.to(elements, {
              opacity: 1,
              y: 0,
              duration: 0.6,
              stagger: 0.08,
              ease: 'power2.out'
            });
          },
          start: 'top 85%',
          once: true
        });

        // Batch animate content sections
        ScrollTrigger.batch('.content-section.animated, .stats-section.animated, .services-section.animated', {
          onEnter: (elements) => {
            gsap.to(elements, {
              opacity: 1,
              y: 0,
              duration: 0.8,
              ease: 'power2.out'
            });
          },
          start: 'top 80%',
          once: true
        });

        // Parallax removed to eliminate forced reflows
      }
    });
  </script>
