---
import SEO from '../../components/SEO.astro';
import '../../styles/cookieconsent-custom.css';

const pageTitle = 'Free Download: Top Private Equity Placement Agents Guide 2025';
const pageDescription = 'Download our comprehensive guide to top private equity placement agents. Includes rankings, fee structures, selection criteria, market statistics, and expert insights for PE fundraising success.';
const pdfUrl = '/pdfs/top-private-equity-placement-agents-guide-2025.pdf';

// Schema markup for the PDF
const digitalDocumentSchema = {
  '@context': 'https://schema.org',
  '@type': 'DigitalDocument',
  name: 'Top Private Equity Placement Agents Guide 2025',
  description: 'Comprehensive directory of leading PE placement agents with rankings, fee structures, selection criteria, and market insights',
  url: `https://placement.quest${pdfUrl}`,
  datePublished: '2025-01-12',
  dateModified: '2025-01-12',
  author: {
    '@type': 'Organization',
    name: 'Placement.quest',
    url: 'https://placement.quest'
  },
  publisher: {
    '@type': 'Organization',
    name: 'Placement.quest',
    url: 'https://placement.quest'
  },
  about: {
    '@type': 'Thing',
    name: 'Private Equity Placement Agents'
  },
  keywords: 'private equity placement agents, PE fundraising, placement agent directory, capital raising, PE placement agents guide, placement agent fees, placement agent selection',
  inLanguage: 'en-US',
  numberOfPages: 30,
  encodingFormat: 'application/pdf'
};

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: 'https://placement.quest'
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Resources',
      item: 'https://placement.quest/resources'
    },
    {
      '@type': 'ListItem',
      position: 3,
      name: 'Placement Agents Guide',
      item: 'https://placement.quest/resources/placement-agents-guide'
    }
  ]
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <SEO
    title={pageTitle}
    description={pageDescription}
  />

  <!-- Schema Markup -->
  <script type="application/ld+json" set:html={JSON.stringify(digitalDocumentSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    html { scroll-behavior: smooth; }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
      background: #000;
      color: #fff;
      line-height: 1.6;
    }

    /* Navigation */
    nav {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      padding: 24px 60px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(20px);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .logo {
      font-size: 20px;
      font-weight: 900;
      background: linear-gradient(135deg, #667eea, #f093fb);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      letter-spacing: -0.5px;
      text-decoration: none;
    }

    .nav-links {
      display: flex;
      gap: 40px;
      list-style: none;
    }

    .nav-links a {
      color: #fff;
      text-decoration: none;
      font-weight: 600;
      font-size: 14px;
      transition: opacity 0.3s;
    }

    .nav-links a:hover { opacity: 0.6; }

    /* Hero Section */
    .hero {
      min-height: 60vh;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 140px 60px 80px;
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.2), rgba(0, 0, 0, 0.8));
      position: relative;
      overflow: hidden;
    }

    .hero::before {
      content: '';
      position: absolute;
      inset: 0;
      background: url('https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=1200&q=50&auto=format') center/cover;
      opacity: 0.15;
      z-index: 0;
    }

    .hero-content {
      position: relative;
      z-index: 1;
      max-width: 900px;
    }

    .hero-badge {
      display: inline-flex;
      align-items: center;
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(20px);
      padding: 12px 28px;
      border-radius: 100px;
      border: 1px solid rgba(255, 255, 255, 0.3);
      margin-bottom: 32px;
      font-size: 14px;
      font-weight: 600;
      letter-spacing: 1.5px;
      text-transform: uppercase;
    }

    .hero h1 {
      font-size: clamp(36px, 6vw, 64px);
      font-weight: 900;
      line-height: 1.1;
      letter-spacing: -0.02em;
      margin-bottom: 24px;
    }

    .hero p {
      font-size: clamp(16px, 2vw, 22px);
      line-height: 1.7;
      color: rgba(255, 255, 255, 0.9);
      margin-bottom: 48px;
      max-width: 700px;
      margin-left: auto;
      margin-right: auto;
    }

    .download-cta {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 24px 48px;
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: #fff;
      text-decoration: none;
      font-weight: 700;
      font-size: 18px;
      border-radius: 100px;
      transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
      box-shadow: 0 10px 40px rgba(102, 126, 234, 0.4);
    }

    .download-cta:hover {
      transform: scale(1.05) translateY(-3px);
      box-shadow: 0 20px 60px rgba(102, 126, 234, 0.5);
    }

    /* Content Section */
    .content-section {
      padding: 100px 60px;
      max-width: 1200px;
      margin: 0 auto;
    }

    .content-section h2 {
      font-size: clamp(32px, 5vw, 48px);
      font-weight: 900;
      margin-bottom: 16px;
      line-height: 1.2;
    }

    .content-section h3 {
      font-size: clamp(24px, 3vw, 32px);
      font-weight: 700;
      margin: 48px 0 24px 0;
      color: #667eea;
    }

    .content-section p {
      font-size: 18px;
      line-height: 1.8;
      color: rgba(255, 255, 255, 0.9);
      margin-bottom: 24px;
    }

    .features-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 32px;
      margin: 60px 0;
    }

    .feature-card {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 16px;
      padding: 32px;
      transition: all 0.3s;
    }

    .feature-card:hover {
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(102, 126, 234, 0.5);
      transform: translateY(-4px);
    }

    .feature-icon {
      font-size: 48px;
      margin-bottom: 16px;
    }

    .feature-card h4 {
      font-size: 20px;
      font-weight: 700;
      margin-bottom: 12px;
      color: #fff;
    }

    .feature-card p {
      font-size: 15px;
      line-height: 1.7;
      color: rgba(255, 255, 255, 0.8);
      margin-bottom: 0;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 40px;
      margin: 60px 0;
    }

    .stat-item {
      text-align: center;
    }

    .stat-number {
      font-size: 48px;
      font-weight: 900;
      background: linear-gradient(135deg, #667eea, #f093fb);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 8px;
    }

    .stat-label {
      font-size: 14px;
      color: rgba(255, 255, 255, 0.7);
      text-transform: uppercase;
      letter-spacing: 1px;
      font-weight: 600;
    }

    .cta-section {
      padding: 100px 60px;
      text-align: center;
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.2), rgba(118, 75, 162, 0.2));
    }

    .cta-section h2 {
      font-size: clamp(32px, 5vw, 48px);
      font-weight: 900;
      margin-bottom: 32px;
    }

    /* Footer */
    footer {
      padding: 80px 60px 40px;
      background: linear-gradient(180deg, rgba(0, 0, 0, 0.95) 0%, #000 100%);
      border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .footer-content {
      max-width: 1400px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 60px;
      margin-bottom: 60px;
    }

    .footer-section h3 {
      font-size: 18px;
      font-weight: 700;
      margin-bottom: 20px;
    }

    .footer-links {
      list-style: none;
    }

    .footer-links a {
      color: rgba(255, 255, 255, 0.6);
      text-decoration: none;
      display: block;
      margin-bottom: 12px;
      transition: color 0.3s;
    }

    .footer-links a:hover {
      color: #fff;
    }

    .footer-bottom {
      text-align: center;
      padding-top: 40px;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      color: rgba(255, 255, 255, 0.5);
      font-size: 14px;
    }

    @media (max-width: 768px) {
      nav { padding: 20px; }
      .hero { padding: 120px 20px 60px; }
      .content-section { padding: 60px 20px; }
      .cta-section { padding: 60px 20px; }
      footer { padding: 60px 20px 40px; }
    }
  </style>
</head>
<body>
  <!-- Navigation -->
  <nav>
    <a href="/" class="logo">Placement</a>
    <ul class="nav-links">
      <li><a href="/articles">Articles</a></li>
      <li><a href="/private-equity-placement-agents">Placement Agents</a></li>
    </ul>
  </nav>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <div class="hero-badge">Free Resource ‚Ä¢ PDF Guide</div>
      <h1>Top Private Equity Placement Agents Guide 2025</h1>
      <p>
