      border-top: 1px solid rgba(255, 255, 255, 0.1);
      position: relative;
      margin-top: 100px;
    }

    footer::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 200px;
      background: linear-gradient(180deg, rgba(102, 126, 234, 0.05), transparent);
      pointer-events: none;
